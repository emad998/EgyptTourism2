@model LoginUser;

<h2>Login</h2>
<form asp-action="Login" asp-controller="Home" method="POST">
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LoginEmail">
        </span>
        <input class="form-control" asp-for="LoginEmail" />
    </div>
    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LoginPassword">
        </span>
        <input class="form-control" asp-for="LoginPassword" />
    </div>
    <button>Log In</button>
</form>